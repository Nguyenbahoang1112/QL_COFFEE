<UserControl x:Class="QL_COFFEE_WPF2.UC_Food"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QL_COFFEE_WPF2"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <TextBlock Text="{Binding Table_Name}" Foreground="White"></TextBlock>
        <Rectangle RadiusX="31.375" RadiusY="31.375">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Images/Table/Table.png" Stretch="Fill"></ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
