<Window x:Class="QL_COFFEE_WPF2.Narbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QL_COFFEE_WPF2"
        mc:Ignorable="d"
        Title="Narbar" Height="450" Width="1000">
    <Grid>
        <StackPanel x:Name="pnl_Narbar" Margin="0,0,800,0" Background="#FF78F367">
            <Button x:Name="btn_PhucVu" Content="Phục vụ" Height="44" Click="btn_PhucVu_Click"/>
            <Button x:Name="btn_Menu" Content="Thực đơn" Height="44"/>
            <Button x:Name="btn_Storate" Content="Kho" Height="44"/>
            <Button x:Name="btn_Luong" Content="Lương" Height="44"/>
            <Button x:Name="btn_NhanVien" Content="Nhân viên" Height="44" Width="auto" />
            <Button Content="Thống kê" Height="44" Width="auto" />
            <Button Content="Đăng xuất" Height="44" Width="auto"/>
            <Button Content="Thoát" Height="44" Width="auto"/>
        </StackPanel>
        
        <StackPanel x:Name="pnl_Main" Margin="205,0,0,0"/>
    </Grid>
</Window>
